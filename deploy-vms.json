{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "maxLength": 32,
      "type": "string",
      "metadata": {
        "description": "Name of the VNET to put the cycle server in"
      }
    },
    "subnetName": {
      "maxLength": 32,
      "type": "string",
      "metadata": {
        "description": "Name of the subnet to put the cycle server in"
      }
    },
    "cycleIPName": {
      "maxLength": 32,
      "type": "string",
      "metadata": {
        "description": "Public IP name for the Cycle VM"
      }
    },
    "cycleDownloadUri": {
      "maxLength": 256,
      "type": "string",
      "metadata": {
        "description": "Cycle download URI"
      }
    },
    "rsaPublicKey": {
      "type": "string",
      "metadata": {
        "description": "The RSA public key to access the VMs."
      }
    }
  },
  "variables": {
    "resourceLocation": "[resourceGroup().location]",
    "namingInfix": "[toLower(take(uniqueString(resourceGroup().id), 6))]",
    "cyclevmSize": "Standard_D8s_v3",
    "cycleName": "cycleserver",
    "cycleNic": "cycle-nic",
    "cycleNsg": "cycle-nsg",

    "cycleInstallScript": ["[uri(deployment().properties.templateLink.uri, 'cyclecloud_install.sh')]"],
    "cycleInstallCommand": "[concat('bash cyclecloud_install.sh ', parameters('cycleDownloadUri'))]",

    "networkApiVersion": "2017-06-01",
    "computeApiVersion": "2017-03-30"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('cycleNsg')]",
      "apiVersion": "[variables('networkApiVersion')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowSecuredCyclePortalInBound",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 3000,
              "direction": "Inbound",
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "AllowCyclePortalInBound",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 2000,
              "direction": "Inbound",
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "default-allow-ssh",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound",
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          }
        ]
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('cycleName')]",
      "apiVersion": "[variables('computeApiVersion')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('cyclevmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "OpenLogic",
            "offer": "CentOS",
            "sku": "7.3",
            "version": "latest"
          },
          "osDisk": {
            "osType": "Linux",
            "createOption": "FromImage",
            "caching": "ReadWrite",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          },
          "dataDisks": [
            {
              "lun": 0,
              "createOption": "Empty",
              "caching": "ReadOnly",
              "managedDisk": {
                "storageAccountType": "Premium_LRS"
              },
              "diskSizeGB": 1023
            }
          ]
        },
        "osProfile": {
          "computerName": "[variables('cycleName')]",
          "adminUsername": "cycleadmin",
          "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
              "publicKeys": [
                {
                  "path": "/home/cycleadmin/.ssh/authorized_keys",
                  "keyData": "[parameters('rsaPublicKey')]"
                }
              ]
            }
          },
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('cycleNic'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "type": "extensions",
          "name": "InstallCycle",
          "apiVersion": "[variables('computeApiVersion')]",
          "location": "[variables('resourceLocation')]",
          "properties": {
            "publisher": "Microsoft.Azure.Extensions",
            "type": "CustomScript",
            "typeHandlerVersion": "2.0",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": "[variables('cycleInstallScript')]"
            },
            "protectedSettings": {
              "commandToExecute": "[variables('cycleInstallCommand')]"
            }
          },
          "dependsOn": [
            "[variables('cycleName')]"
          ]
        }
      ],
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('cycleNic'))]"
      ]
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('cycleIPName')]",
      "apiVersion": "[variables('networkApiVersion')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4,
        "dnsSettings": {
          "domainNameLabel": "[concat('cycleserver', variables('namingInfix'))]"
        }
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('cycleNic'), variables('namingInfix'))]",
      "apiVersion": "[variables('networkApiVersion')]",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('cycleIPName'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
              },
              "primary": true,
              "privateIPAddressVersion": "IPv4"
            }
          }
        ],
        "dnsSettings": {
        },
        "enableAcceleratedNetworking": false,
        "enableIPForwarding": false,
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('cycleNsg'))]"
        },
        "primary": true
      },
      "dependsOn": [
      ]
    }
  ],
  "outputs": {
  }
}